PORT=3000
NODE_ENV=development
SESSION_SECRET=seuSegredoAqui
MONGO_URI=mongodb://localhost:27017/fatecweek
ADMIN_BOOTSTRAP_KEY=defina-uma-chave-secreta
ALLOWED_ORIGINS=http://localhost:3000
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX=300

# Email provider: 'smtp' (default) ou 'sendgrid'
EMAIL_PROVIDER=sendgrid

# SendGrid
SENDGRID_API_KEY=SG_xxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=eventos@seudominio.com
SENDGRID_TEST_TO=seu.email@dominio.com

# SMTP fallback (se usar SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=usuario
SMTP_PASS=senha
EMAIL_FROM=eventos@seudominio.com

# Certificado
CERT_THRESHOLD_MINUTES=30

# Criptografia opcional de certificados (AES-256)
# Use uma frase ou chave e mantenha este valor em segredo
FILE_ENCRYPTION_KEY=suaFraseSecreta
